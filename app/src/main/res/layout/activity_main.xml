<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/edit_text"
        android:layout_width="393dp"
        android:layout_height="92dp"
        android:text="0.0"
        android:inputType="text|numberDecimal"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="72dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="end|center_vertical"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintTop_toBottomOf="@id/edit_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button2"
        app:layout_constraintBottom_toTopOf="@id/button4"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="168dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="164dp"
        app:layout_constraintTop_toBottomOf="@id/edit_text"
        app:layout_constraintEnd_toStartOf="@id/button3"
        app:layout_constraintStart_toEndOf="@id/button1"
        app:layout_constraintBottom_toTopOf="@id/button5"
        />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        tools:layout_editor_absoluteX="184dp"
        tools:layout_editor_absoluteY="164dp"
        app:layout_constraintTop_toBottomOf="@id/edit_text"
        app:layout_constraintStart_toEndOf="@id/button2"
        app:layout_constraintEnd_toStartOf="@id/addition"
        app:layout_constraintBottom_toTopOf="@id/button6"
        />

    <Button
        android:id="@+id/addition"
        android:layout_width="57dp"
        android:layout_height="44dp"
        android:text="+"
        tools:layout_editor_absoluteX="275dp"
        tools:layout_editor_absoluteY="168dp"
        app:layout_constraintTop_toBottomOf="@id/edit_text"
        app:layout_constraintStart_toEndOf="@id/button3"
        app:layout_constraintEnd_toStartOf="@id/multiply"
        app:layout_constraintBottom_toTopOf="@id/substarction"/>

    <Button
        android:id="@+id/multiply"
        android:layout_width="89dp"
        android:layout_height="40dp"
        android:text="*"
        app:layout_constraintBottom_toTopOf="@id/divison"
        app:layout_constraintStart_toEndOf="@id/addition"
        app:layout_constraintTop_toBottomOf="@id/edit_text" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        app:layout_constraintTop_toBottomOf="@id/button1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button5"
        app:layout_constraintBottom_toTopOf="@id/button7"
        tools:layout_editor_absoluteY="212dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        tools:layout_editor_absoluteX="93dp"
        app:layout_constraintTop_toBottomOf="@id/button2"
        app:layout_constraintEnd_toStartOf="@id/button6"
        app:layout_constraintBottom_toTopOf="@id/button8"
        tools:layout_editor_absoluteY="209dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        tools:layout_editor_absoluteX="188dp"
        tools:layout_editor_absoluteY="205dp"
        app:layout_constraintTop_toBottomOf="@id/button3"
        app:layout_constraintEnd_toStartOf="@id/substarction"
        app:layout_constraintBottom_toTopOf="@id/button9"/>

    <Button
        android:id="@+id/substarction"
        android:layout_width="59dp"
        android:layout_height="46dp"
        android:text="-"
        tools:layout_editor_absoluteX="273dp"
        tools:layout_editor_absoluteY="207dp"
        app:layout_constraintTop_toBottomOf="@id/addition"
        app:layout_constraintEnd_toStartOf="@id/divison"
        app:layout_constraintBottom_toTopOf="@id/sqrt"/>

    <Button
        android:id="@+id/divison"
        android:layout_width="78dp"
        android:layout_height="44dp"
        android:text="/"
        app:layout_constraintBottom_toTopOf="@id/sqrt"
        app:layout_constraintTop_toBottomOf="@id/multiply"
        app:layout_constraintStart_toEndOf="@id/button6"
        tools:layout_editor_absoluteX="332dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="262dp"
        app:layout_constraintTop_toBottomOf="@id/button4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button8"
        app:layout_constraintBottom_toTopOf="@id/button0"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="258dp"
        app:layout_constraintTop_toBottomOf="@id/button5"
        app:layout_constraintEnd_toStartOf="@id/button9"
        app:layout_constraintBottom_toTopOf="@id/button0"/>

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        tools:layout_editor_absoluteX="189dp"
        tools:layout_editor_absoluteY="258dp"
        app:layout_constraintTop_toBottomOf="@id/button6"
        app:layout_constraintEnd_toStartOf="@id/sqrt"
        app:layout_constraintBottom_toTopOf="@id/dot"/>

    <Button
        android:id="@+id/sqrt"
        android:layout_width="144dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:text="sqrt"
        app:layout_constraintBottom_toTopOf="@id/equation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button9"
        app:layout_constraintTop_toBottomOf="@id/divison" />

    <Button
        android:id="@+id/button0"
        android:layout_width="168dp"
        android:layout_height="46dp"
        android:text="0"
        app:layout_constraintEnd_toStartOf="@id/dot"
        app:layout_constraintTop_toBottomOf="@id/button7" />

    <Button
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="318dp"
        app:layout_constraintTop_toBottomOf="@id/button8"
        app:layout_constraintEnd_toStartOf="@id/equation"/>

    <Button
        android:id="@+id/equation"
        android:layout_width="149dp"
        android:layout_height="52dp"
        android:text="="
        tools:layout_editor_absoluteX="242dp"
        tools:layout_editor_absoluteY="308dp"
        app:layout_constraintTop_toBottomOf="@id/sqrt"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>